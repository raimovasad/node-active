<div class="row" style="display: flex;justify-content:center;margin-top: 100px;">
      <form action="/blogs/edit" method="POST" style="width: 80%;" enctype="multipart/form-data">
        <div class="addblog__form row">
        <div class="input-field col s12 ">
          <input  id="title" type="text" name="title" value="{{blog.title}}" class="validate">
          <label for="title">Title of the blog</label>
        </div>

        <div class="input-field col  s12">
            <textarea id="textarea2" class="materialize-textarea" name="info">{{blog.info}}</textarea>
            <label for="textarea2">Blog info</label>
          </div>

           <div class="input-field col s12 ">
          <input  id="videoUrl" type="text" name="videoUrl" class="validate" value="{{blog.videoUrl}}">
          <label for="videoUrl">Video url of the blog</label>
        </div>


        <div class="file-field input-field col s12 ">
             <div class="btn">
              <span>Choose image</span>
              <input type="file" name="image">
             </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text" value="{{blog.image}}" >
             </div>
      </div>

        <div class="file-field input-field col s12 ">
             <div class="btn">
              <span>Choose audio</span>
              <input type="file" name="image">
             </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text" value="{{blog.audio}}">
             </div>
      </div>
        <input type="hidden" name="id" value="{{blog._id}}">
        <div class="col s12" style="margin-top: 40px; display: flex; justify-content: center;">
            <button type="submit" class="btn btn-primary" style="width: 200px; height: 40px;">Submit</button>
        </div>
        </div>
    </form>
</div>