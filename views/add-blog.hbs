  <div class="row" style="display: flex;justify-content:center;margin-top: 100px;">
      <form action="/blogs/add" method="POST" style="width: 80%;" enctype="multipart/form-data">
        <div class="row addblog__form">
       
       
       
         <div class="input-field col s12">
          <input  id="title" type="text" name="title" class="validate">
          <label for="title">Title of the blog</label>
        </div>

          

          <div class="input-field col s12">
          <textarea id="textarea1" class="materialize-textarea" name="info"></textarea>
          <label for="textarea1">Blog info</label>
        </div>

           <div class="input-field col s12">
          <input  id="videoUrl" type="text" name="videoUrl" class="validate">
          <label for="videoUrl">Video url of the blog</label>
        </div>

        
          <div class="file-field input-field col s12">
             <div class="btn">
               <span>Choose Picture</span>
              <input type="file"  name="image">
             </div>
            <div class="file-path-wrapper">
             <input class="file-path validate" type="text" placeholder="Choose Picture">
            </div>
         </div>

          <div class="file-field input-field col s12">
             <div class="btn">
               <span>Choose Audio</span>
              <input type="file"   name="audio">
             </div>
            <div class="file-path-wrapper">
             <input class="file-path validate" type="text" placeholder="Choose Audio">
            </div>
         </div>
         
       
     
        
       
        

        <div class="col s12" style="margin-top: 40px; display: flex; justify-content: center;">
            <button type="submit" class="btn btn-primary purple darken-3" style="width: 200px; height: 40px;">Submit</button>
        </div>
        </div>
</form>
  </div>